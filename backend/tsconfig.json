{
  "ts-node": { "files": true },
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "allowJs": true,
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"]
  },
  "include": ["src"]
}
